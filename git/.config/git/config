; [url "ssh://git@gitlab.com"]
;   insteadOf = https://gitlab.com

[alias]
    p = push --force-with-lease
    a = add -A
    cm = commit
    st = status --show-stash
    pl = pull --recurse-submodules
    df = !git diff --name-only --relative --diff-filter=d | xargs bat --diff
    lg = log --abbrev-commit --graph 
    cl = clone --recursive
    cla = clone --recursive --depth=1 --shallow-submodules
    yolo = !git add -A && git commit -m \"$(curl -Ls http://whatthecommit.com/index.txt)\" && git push
    amend = !git add -A && git commit --amend --no-edit
    cr = !git reset --hard && git clean -xdf
    spushall = submodule foreach --recursive git push
    sup = submodule update --init --recursive --recommend-shallow
