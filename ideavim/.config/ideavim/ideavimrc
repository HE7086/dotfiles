set laststatus=2

set smartindent
set autoindent

set visualbell
set noerrorbells

set number
set relativenumber
" search options
set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase

set showcmd
set showmode
set mouse=a

set scrolloff=5
set sidescrolloff=1

set clipboard+=unnamed
set clipboard+=unnamedplus

set surround
set multiple-cursors
set commentary
set highlightedyank
set exchange

set ideajoin
set ideastatusicon=gray
set idearefactormode=visual

let g:highlightedyank_highlight_duration = "300"

noremap <F6> :set nu! rnu!<CR>
vnoremap <right> >gv
vnoremap <left> <gv

noremap <A-h> <left>
noremap <A-j> <down>
noremap <A-k> <up>
noremap <A-l> <right>

noremap! <A-h> <left>
noremap! <A-j> <down>
noremap! <A-k> <up>
noremap! <A-l> <right>

" noremap L $
" noremap H ^

nmap == <Action>(ReformatCode)
" nmap p <Action>(PutTextAfterCursorAction)

nnoremap <space><CR> :nohlsearch<CR>

nnoremap Y v$y

command! W :w

exec nohlsearch
