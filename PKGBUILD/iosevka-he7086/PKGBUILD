_git_name=Iosevka
pkgname=ttf-iosevka-he7086
pkgver=10.1.1
pkgrel=1
pkgdesc="Typeface family designed for coding, terminal use and technical documents. Customized verion for he7086."
arch=("any")
url="https://typeof.net/Iosevka/"
license=("OFL")
makedepends=("git" "ttfautohint" "npm")
source=("private-build-plans.toml")
sha256sums=('0a7cb03a07f6ae73b5011ec60af2f6bfe99d09ddd416c21edf9ee184eb527724')

prepare() {
    # makepkg won't support shallow clone in source array, so clone it manually.
    if [[ -d "${_git_name}" ]]; then
        (cd "${_git_name}" && git pull)
    else
        git clone --depth=1 https://github.com/be5invis/Iosevka.git
    fi
    cp "private-build-plans.toml" "${_git_name}/private-build-plans.toml"
}

pkgver() {
    cd "${_git_name}"
    git describe --tags | sed -E 's/.*v(.+)/\1/'
}

build() {
    cd "${_git_name}"
    npm install
    npm update
    npm run build -- ttf::iosevka-he7086
}

package() {
    cd "${_git_name}"
    install -d ${pkgdir}/usr/share/fonts/TTF/
    install -m644 dist/iosevka-he7086/ttf/* ${pkgdir}/usr/share/fonts/TTF/
    install -D -m644 LICENSE.md ${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.md
}
